{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        },
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es2020",
        "checkJs": false
    },
    "include": [
        "**/*.js",
        "**/*.jsx"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}
